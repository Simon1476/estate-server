{
  "compilerOptions": {
    "module": "commonjs",                               
    "rootDir": "./",                                
    "typeRoots": ["./types/express","./node_modules/@types"],                                 
    "types": ["node", "express"],
    "outDir": "./build",                          
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "strictNullChecks": true,                      
    "skipLibCheck": true,
  },
  "exclude": ["node_modules"]
}
